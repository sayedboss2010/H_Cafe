@{
    var langCookies = Context.Request.Cookies.FirstOrDefault(c => c.Key == "Lang").Value;
    var lang = string.IsNullOrEmpty(langCookies) ? "ar" : langCookies;

    //lang = "en";

    var direction = lang == "ar" ? "rtl" : "ltr";
    var bodyClass = lang == "ar" ? "rtl" : "";
    var overflow = lang == "ar" ? "overflow-x-hidden" : "";
}

<!DOCTYPE html>
<html lang="@lang" dir="@direction">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/assets/img/favicon.png">
    <title>
        @(lang == "ar" ? "منظومة إدارة الكافتريا  " : "ERP System")
    </title>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
    <!-- Nucleo Icons -->
    <link href="~/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <script src="~/assets/js/iconawsaom.js"></script>
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <link href="~/assets/css/iconpath.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link id="pagestyle" href="~/assets/css/material-dashboard.css?v=3.0.0" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/ajax/jquery.gritter.css" rel="stylesheet" />    
</head>
<body class="g-sidenav-show @bodyClass bg-gray-200">
    <partial name="_sidenav" />
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg @overflow">
        <partial name="_Navbar" />
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
        <partial name="_footer" />
    </main>
    <partial name="_theme" />
    
    <script src="~/modules/global.js"></script>

    <script src="~/assets/js/core/popper.min.js"></script>
    <script src="~/assets/js/core/bootstrap.min.js"></script>
  
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/assets/js/material-dashboard.min.js?v=3.0.0"></script>
    <script src="~/jquery/3.7.0/Content/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/assets/js/plugins/bootbox.min.js"></script>
    <script src="~/lib/ajax/jquery.gritter.min.js"></script>    
    <script>
        window.addEventListener("load", function () {

            // Add the "show" class to the parent ul of the active link
            var activeLink = document.querySelector("#sidenav-collapse-main .active.nav-link");
            var parentUL = activeLink.closest(".collapse");
            if (parentUL) {
                parentUL.classList.add("show");
            }
        });
        $(document).on('blur', '.moneyDigits', function () {

            let number = $(this).val();
            $(this).val(moneyDigits(number));
        });  
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
